# 🔧 Configuration d'Environnement
# Gospel Chant et Parole Backend - Production

# 🗄️ Base de données
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=gospelchantetparole
DB_NAME_TEST=gospelchantetparole_test

# 🔐 JWT Configuration
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_at_least_32_characters
JWT_EXPIRES_IN=7d

# 🌐 Serveur
PORT=5000
NODE_ENV=production

# 🔒 Sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SLOW_DOWN_DELAY_MS=500

# 📧 Email (optionnel pour notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@gospelchantetparole.com

# 📱 CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com,https://your-mobile-app.com

# 📊 Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 🔄 Synchronisation
SYNC_INTERVAL_HOURS=24
MAX_SYNC_RETRIES=3

# 📈 Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365

# 🎵 Médias
MEDIA_UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=mp3,mp4,wav,m4a

# 🚀 Performance
CACHE_TTL_SECONDS=3600
ENABLE_COMPRESSION=true
ENABLE_CACHE=true

# 🔧 Divers
API_VERSION=v1
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_PASSWORD=change_this_password_in_production

# Configuration optionnelle pour la production
# SSL_CERT_PATH=/path/to/certificate.pem
# SSL_KEY_PATH=/path/to/private-key.pem
